{{!-- Main Section --}}
<main>
  <div class="container-fluid main-box">
    {{!-- Welcome User --}}
    <div class="container">
      <div class="row">
        <div class="col-md-6 col-12">
          <h2 class="hi-user">Welcome <span class="member-name"></span></h2>
        </div>
      </div>
    </div>

    {{!-- Total Budget and Budget Left --}}
    <div class="container">
      <div class="row">
        <div class="col-md-3 col-4">
          <h1>$ <span id="total-budget"></span></h1>
          <p>Total Budget</p>
          <div class="dropdown">
            <button class="btnCustom btnCustom-default dropdown-toggle align-baseline" type="button" id="editDropDown" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
              edit
            </button>
              
            <div class="dropdown-menu" onClick="event.stopPropagation();" aria-labelledby="editDropDown">
              <div class="form-group">
                <label for="budget">Enter your budget</label>
                <div class="input-group">
                  <div class="input-group-addon">
                    <span class="input-group-text" id="inputGroup-sizing-default dollar-sign">$</span>
                  </div>
                  <input type="text" class="form-control" id="budget" aria-label="$" aria-describedby="dollar-sign">
                </div>
                <button type="submit" id="save-budget" class="btn expBtn"><span>Save</span></button>
                <button type="submit" id="close-budget" class="btn expBtn"><span>Cancel</span></button>
              </div>
            </div>
          </div>
        </div>

        <div class="col-md-3 col-md-offset-3 col-4 col-offset-4">
          <h1>$ <span id="budget-left"></span></h1>
          <p>Budget Left</p>
        </div>
      </div>
      <hr>
    </div>

    <div class="container second-row">
      <div class="row">

        {{!-- Chart --}}
        <div class="col-md-8 col-12">
          <figure class="highcharts-figure">
            <div id="chart-container"></div>
          </figure>
        </div>

        {{!-- Add Expense Dropdown Menu Button --}}
        <div class="col-md-4 col-6 dd-box">
          <div class="dropdown">
            <button class="btn dropdown-toggle" type="button" id="dropdownMenuButton" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
              Add New Expense
            </button>
              
            <div class="dropdown-menu spendingInput" onClick="event.stopPropagation();" aria-labelledby="dropdownMenuButton">
              <div class="form-group">
                {{!-- Amount Spent field --}}
                <label for="amount">Amount</label>
                <div class="input-group">
                  <div class="input-group-addon">
                    <span class="input-group-text" id="inputGroup-sizing-default dollar-sign">$</span>
                  </div>
                  <input type="text" class="form-control" id="amount" aria-label="$" aria-describedby="dollar-sign">
                </div>
                
                {{!-- Description field --}}
                <label for="description">Description</label>
                <div class="input-group">
                  <input type="text" class="form-control" id="description">
                </div>

                {{!-- Category Dropdown --}}
                <label for="category-menu">Category</label>
                <select class="form-control" id="category-menu">
                  <option>--- choose one ---</option>
                  {{#each categories}}
                  <option data-id={{id}}> {{categories}} </option>
                  {{/each}}
                </select>
              </div>

              <button type="submit" id="save-exp" class="btn expBtn"><span>Save</span></button>
              <button type="submit" id="close-exp" class="btn expBtn"><span>Cancel</span></button>
            </div>
          </div>
        </div>

        <div class="col-md-4 col-6 renderExpenses">
          <div class="expensesBox">
            <h5 id="log-title">Expenses Log:</h5>
            {{!-- render all expenses here --}}
            <table>
              <tr>
                <th>Category</th>
                <th>Description</th>
                <th>Amount</th>
              </tr>
              {{#each expensesLog}}
              <tr>
                <td>{{category}}</td>
                <td>{{description}}</td>
                <td>{{amount}}</td>
              </tr>
              {{/each}}
            </table>
          </div>
        </div>

      </div>
    </div>

  </div>
</main>

